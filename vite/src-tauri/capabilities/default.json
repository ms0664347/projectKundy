{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Allow kundy-app full access to BaseDirectory.AppData",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "fs:allow-appdata-read-recursive",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.kundy.app/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-appdata-write-recursive",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.kundy.app/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.kundy.app/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.kundy.app/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/com.kundy.app/**"
        }
      ]
    }
  ]
}